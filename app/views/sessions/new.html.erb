<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <%= label_tag 'name' %>
  <%= text_field_tag 'name' %>
  <%= submit_tag 'Log in' %>
<% end %>

<h2>Or Sign up</h2>

<div class="field">
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h3>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>

<%= form_for @user do |f| %>
  <%= f.label 'name' %>
  <%= f.text_field 'name' %>
  <%= f.submit 'Sign up' %>
<% end %>
