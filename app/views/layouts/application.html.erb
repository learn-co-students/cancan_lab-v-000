<!DOCTYPE html>
<html>
<head>
  <title>CancanLab</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div>
  <% if current_user %>
    Hi, <%= current_user.name %>
    <%= form_tag('/logout', method: :post, class: 'session-logout') do %>
      <input type="submit" value='log out'>
    <% end %>
  <% end %>
  <% form_tag('/login', method: :post, class: 'session-login') do %>
    <input name=name placeholder="sign in as someone else">
  <% end %>
  </div>
  <%= link_to "new note", "/notes/new" %>

<%= yield %>

</body>
</html>
