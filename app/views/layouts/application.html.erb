<!DOCTYPE html>
<html>
<head>
  <title>CancanLab</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if true %>
    <%= form_tag('/logout', method: :post, class: 'session-logout') do %>
      <input type=submit value='log out'>
    <% end %>
    <nav class='note-tools'>
      <%= link_to "new note", '/notes/new' %>
    </nav>
  <% else %>
    <%= form_tag('/login', method: :post, class: 'session-login') do %>
      <input name=name placeholder='sign in as someone else'>
      <input type=submit value='log in'>
    <% end %>
  <% end %>

<%= yield %>

</body>
</html>
