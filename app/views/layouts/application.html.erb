<!DOCTYPE html>
<html>
<head>
  <title>CancanLab</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= flash[:error] %>
<%= flash[:warning] %>
<%= flash[:alert] %>

<%= user_signed_in? ? link_to("Sign out", session_path(current_user), :method => "delete") : link_to("Sign in", new_session_path) %>
<h3><%= "Logged in as #{current_user.name}" unless current_user.nil? %></h3>

<%= yield %>

</body>
</html>
